<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/track_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/track_play_pause"
        android:src="@drawable/ic_play_circle_outline_black_48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/track_full_name"
        android:text="Название песни - исполнитель"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/track_play_pause"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/track_add_delete"
        android:src="@drawable/ic_add_black_48dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>